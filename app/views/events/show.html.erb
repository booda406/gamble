<%- model_class = Event -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:follow) %>:</strong></dt>
  <dd><%= @event.follow %></dd>
  <dt><strong><%= model_class.human_attribute_name(:date) %>:</strong></dt>
  <dd><%= @event.date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @event.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user1) %>:</strong></dt>
  <dd><%= @event.user1 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user2) %>:</strong></dt>
  <dd><%= @event.user2 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:item) %>:</strong></dt>
  <dd><%= @event.item %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              events_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_event_path(@event), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              event_path(@event),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>


<div>
        <%= render 'comments/form' %>
</div>
        <% Comment.find(:all, :conditions => { :event_id => params[:id]}).each do |comment| %>
<div class="row row_respond">
<div class="respond col-xs-8 col-sm-8 col-md-6 col-lg-6">
        <div class="name">
        <%= comment.name %><br>
        </div>
        <%= comment.content %>
        <div class="time">
        <%= comment.created_at.strftime("%F %r") %>
        </div>
</div>
</div>

        <% end %>