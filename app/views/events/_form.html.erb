      <%= f.check_box :follow , :class=> 'text_field' %>true
      <%= f.check_box :follow , :class=> 'text_field' %>flase
    </div>
  <!-- </div> -->
  <!-- <div class="control-group"> -->
    <%= f.label :date, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :date, :class => 'text_field', :id => "date", :label => false %>
    </div>
  <!-- </div> -->
  <!-- <div class="control-group"> -->
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :description, :class => 'text_field' %>
    </div>
  <!-- </div> -->
  <!-- <div class="control-group"> -->
    <%= f.label :user1, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :user1, :class => 'text_field' %>
    </div>
  <!-- </div> -->
  <!-- <div class="control-group"> -->
    <%= f.label :user2, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :user2, :class => 'text_field' %>
    <!-- </div> -->
  </div>
  <!-- <div class="control-group"> -->
    <%= f.label :item, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :item, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                root_path, :class => 'btn' %>
  </div>
<% end %>


